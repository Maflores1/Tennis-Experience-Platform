<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>My Profile - Tennis Experience Board</title>
  </head>
  <body>
    <header>
      <div class="raider-logo">
        <img src="/images/raider-flag.png" alt="Raider Logo" />
      </div>
      <h1>My Profile</h1>
      <nav>
        <a href="/">Home</a>
        <% if (user) { %>
        <a href="/submit">Submit Experience</a>
        <a href="/profile">My Profile</a>
        <form action="/logout" method="POST" style="display: inline">
          <button
            type="submit"
            style="
              background: #a80000;
              border: 1px solid white;
              color: white;
              padding: 0.5rem 1rem;
              cursor: pointer;
              border-radius: 4px;
              margin-bottom: 2rem;
            "
          >
            Logout
          </button>
        </form>
        <% } else { %>
        <a href="/login">Login</a>
        <a href="/register">Register</a>
        <% } %>
      </nav>
    </header>
    <main>
      <div class="profile-section">
        <h2>User Information</h2>
        <div class="profile-info">
          <p><strong>Username:</strong> <%= user.username %></p>
          <p>
            <strong>Name:</strong> <%= user.first_name %> <%= user.last_name %>
          </p>
          <p><strong>Email:</strong> <%= user.email %></p>
          <% if (user.university) { %>
          <p><strong>University:</strong> <%= user.university %></p>
          <% } %>
          <p>
            <strong>Member since:</strong> <%= new
            Date(user.created_at).toLocaleDateString() %>
          </p>
        </div>
      </div>

      <div class="profile-section">
        <h2>My Experiences (<%= experiences.length %>)</h2>
        <% if (experiences.length > 0) { %>
        <ul class="profile-list">
          <% experiences.forEach(exp => { %>
          <li>
            <strong>Category:</strong> <%= exp.category %><br />
            <p><%= exp.text %></p>
            <em>Posted on <%= exp.added.toLocaleString() %></em>
          </li>
          <% }) %>
        </ul>
        <% } else { %>
        <p>
          You haven't shared any experiences yet.
          <a href="/submit">Share your first experience!</a>
        </p>
        <% } %>
      </div>

      <div class="profile-section">
        <h2>My Responses (<%= responses.length %>)</h2>
        <% if (responses.length > 0) { %>
        <ul class="profile-list">
          <% responses.forEach(response => { %>
          <li>
            <p><strong>Response:</strong> <%= response.text %></p>
            <p>
              <strong>On experience:</strong> "<%=
              response.experience_text.substring(0, 100) %>..."
            </p>
            <p><strong>Category:</strong> <%= response.category %></p>
            <em>Posted on <%= response.added.toLocaleString() %></em>
          </li>
          <% }) %>
        </ul>
        <% } else { %>
        <p>
          You haven't responded to any experiences yet.
          <a href="/">Check out some experiences to respond to!</a>
        </p>
        <% } %>
      </div>
    </main>
    <footer>
      <p>
        &copy; 2025 Tennis Experience Board - Connecting International Tennis
        Players
      </p>
    </footer>
  </body>
</html>
